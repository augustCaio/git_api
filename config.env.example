# Configurações da API
API_TITLE=GitHub Data API
API_VERSION=0.1.0
API_DESCRIPTION=API REST para acessar dados do GitHub com cache, monitoramento e recursos de produção

# Configurações do Servidor
HOST=127.0.0.1
PORT=8000
DEBUG=true

# Configurações da API do GitHub
GITHUB_TOKEN=seu-token-do-github-aqui
GITHUB_API_BASE_URL=https://api.github.com

# Configurações de Segurança
SECRET_KEY=sua-chave-secreta-aqui-mude-em-producao
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Configurações de API Key (opcional)
ENABLE_API_KEY_AUTH=false
API_KEY_HEADER=X-API-Key
VALID_API_KEYS=[]

# Configurações de Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Configurações de Cache
USE_REDIS_CACHE=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
CACHE_TTL=300

# Configurações de CORS
CORS_ORIGINS=["*"]
ALLOWED_HOSTS=["*"] 